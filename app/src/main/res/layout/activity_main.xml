<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.MainActivity">

    <EditText
        android:id="@+id/editTextNombreProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Nombre del Producto"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editTextMarcaProducto"
        app:layout_constraintStart_toStartOf="@+id/editTextMarcaProducto"
        app:layout_constraintTop_toBottomOf="@+id/editTextMarcaProducto" />

    <EditText
        android:id="@+id/editTextMarcaProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Marca del Producto"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextCantidadProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="cantidad del Producto"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/editTextNombreProducto"
        app:layout_constraintStart_toStartOf="@+id/editTextNombreProducto"
        app:layout_constraintTop_toBottomOf="@+id/editTextNombreProducto" />

    <EditText
        android:id="@+id/editTextPrecioProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Precio del Producto"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/editTextCantidadProducto"
        app:layout_constraintStart_toStartOf="@+id/editTextCantidadProducto"
        app:layout_constraintTop_toBottomOf="@+id/editTextCantidadProducto" />

    <Button
        android:id="@+id/buttonInsertarProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Registrar Producto"
        app:layout_constraintEnd_toEndOf="@+id/editTextPrecioProducto"
        app:layout_constraintStart_toStartOf="@+id/editTextPrecioProducto"
        app:layout_constraintTop_toBottomOf="@+id/editTextPrecioProducto" />

    <ListView
        android:id="@+id/listViewListarProductos"
        android:layout_width="409dp"
        android:layout_height="385dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonInsertarProducto" />
</androidx.constraintlayout.widget.ConstraintLayout>